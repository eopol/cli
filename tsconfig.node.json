{
  "extends": "@eo-cli-pro/ts-config/node.module.json",
  "compilerOptions": {
    "composite": true
  },
  "include": [
    "**/build.config.ts",
    "**/scripts/**/*",
    "scripts/**/*",
    "packages/*/src/**/*",
    "packages/*/package.json",
    "packages/**/*/src/**/*",
    "packages/**/*/package.json",
    "packages/*/typings/**/*",
    "typings/env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "**/dist",
    "**/__tests__/**",
    "**/tests/**",
    "**/*.md"
  ]
}
